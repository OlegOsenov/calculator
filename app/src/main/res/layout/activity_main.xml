<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!--отображение операций -->
    <TextView
        android:id="@+id/textOperation"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        />
    <!--отображение результата -->
    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="40sp"
        android:singleLine="true"
        />
    <!--отображение кнопок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/ButtonOperation"
                android:text="C"
                />
            <TextView
                style="@style/ButtonOperation"
                android:text="("
                />
            <TextView
                style="@style/ButtonOperation"
                android:text=")"
                />
            <TextView
                style="@style/ButtonOperation"
                android:text="/"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/ButtonNumber"
                android:text="7"
                />
            <TextView
                style="@style/ButtonNumber"
                android:text="8"
                />
            <TextView
                style="@style/ButtonNumber"
                android:text="9"
                />
            <TextView
                style="@style/ButtonOperation"
                android:text="*"
                />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/ButtonNumber"
                android:text="4"
                />
            <TextView
                style="@style/ButtonNumber"
                android:text="5"
                />
            <TextView
                style="@style/ButtonNumber"
                android:text="6"
                />
            <TextView
                style="@style/ButtonOperation"
                android:text="+"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/ButtonNumber"
                android:text="1"
                />
            <TextView
                style="@style/ButtonNumber"
                android:text="2"
                />
            <TextView
                style="@style/ButtonNumber"
                android:text="3"
                />
            <TextView
                style="@style/ButtonOperation"
                android:text="%"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/ButtonNumber"
                android:text=","
                />
            <TextView
                style="@style/ButtonNumber"
                android:text="0"
                />
            <TextView
                style="@style/ButtonNumber"
                android:text="Back"

                />
            <TextView
                style="@style/ButtonOperation"
                android:text="="
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>